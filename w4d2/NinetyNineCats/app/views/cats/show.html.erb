<h2><%= @cat.name %></h2>

<table>
  <tr>
    <td>Name</td>
    <td><%= @cat.name %></td>
  </tr>
  <tr>
    <td>Age</td>
    <td><%= @cat.age %></td>
  </tr>
  <tr>
    <td>Sex</td>
    <td><%= @cat.sex %></td>
  </tr>
  <tr>
    <td>Color</td>
    <td><%= @cat.color %></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= @cat.description %></td>
  </tr>
</table>
<br>
<br>

<%= link_to "Edit", edit_cat_url(@cat) %>
<br>
<br>

<h3>Current Requests</h3>
<table>
  <tr>
    <td>Start Date</td>
    <td>End Date</td>
    <td>Status</td>
  </tr>
  <% @cat.cat_rental_requests.each do |request| %>
    <tr>
      <td><%= request.start_date %></td>
      <td><%= request.end_date %></td>
      <td><%= request.status %></td>
      <% if request.status == "PENDING" %>
        <td><%= button_to "Approve", approve_cat_rental_request_url %></td>
        <td><%= button_to "Deny", deny_cat_rental_request_url %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<br>
<br>
<%= link_to "Back to cat Index", cats_url %>
