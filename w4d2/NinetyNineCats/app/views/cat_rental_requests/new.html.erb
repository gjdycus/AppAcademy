<form action = "/cat_rental_requests/" method = "POST">

  <label for = "cat_selected">Choose cat</label>
  <select name = "cat_rental_requests[cat_id]" id = "cat_selected">
    <option></option>
    <% Cat.all.each do |cat| %>
      <option value = "<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br>
  <br>

  <label for = "start_date">From</label>
  <input type = "date", name = "cat_rental_requests[start_date]"
  id = "start_date">
  <br>
  <br>

  <label for = "end_date">Untill</label>
  <input type = "date", name = "cat_rental_requests[end_date]"
  id = "end_date">
  <br>
  <br>

  <input type = "submit" value = "Enter">
</form>
<br>
<%= link_to "Cancel", :back %>
